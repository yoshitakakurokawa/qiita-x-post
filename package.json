{
  "name": "qiita-x-bot",
  "version": "1.0.0",
  "description": "Automatically post Qiita articles to X (Twitter) with AI evaluation",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "format:check": "biome format src/",
    "check": "biome check --write src/",
    "typecheck": "tsc --noEmit",
    "ci": "bun run typecheck && bun run lint && bun run format:check && bun run test:coverage",
    "tools:fetch-members": "bun run tools/fetch-org-members.ts"
  },
  "keywords": [
    "qiita",
    "twitter",
    "x",
    "cloudflare-workers",
    "hono",
    "claude"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "hono": "^4.10.7",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@cloudflare/workers-types": "^4.20251128.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.14",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14",
    "wrangler": "^4.51.0"
  }
}
